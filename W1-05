#include<iostream>
using namespace std;

struct RationalNumber
{
	int a, b;/*a (to mean the numerator) and b (to mean the denominator)*/
	double toDouble(RationalNumber r)
	{
		double result = static_cast<double>(a) / b;
		return result;
	}

};

int main()
{
	RationalNumber r;
	r.a = 1;
	r.b = 2;
	cout << r.toDouble(r);

	system("pause");
	return 0;
}
